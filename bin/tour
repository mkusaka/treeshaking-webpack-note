#!/bin/bash
# usage:
#   # execute command to all packages
#   bin/tour yarn
#   # parallel execution
#   bin/tour -p 
#

# parallel execution flag
P=

# only execute following package
O=

for OPT in "${@}"; do
  case $OPT in
    "-p")
      P=1
      shift
      ;;
    "-o")
      shift
      O=$1
      shift
      ;;
  esac
done

set -eo pipefail

if [ -n "$O" ]; then
  if [ -n "$P" ]; then
    pids=()
    dir=packages/$O/*/
    for d in $dir; do
      pushd $d
      eval "${@}" &
      pids+=($!)
      popd
    done
    for pid in "${pids[@]}"; do
      wait "$pid"
    done
  else
    for d in packages/$O/*/; do
      pushd $d
      eval "${@}"
      popd
    done
  fi
else
  if [ -n "$P" ]; then
    pids=()
    for d in packages/$package/*/*/; do
      pushd $d
      eval "${@}" &
      pids+=($!)
      popd
    done
    for pid in "${pids[@]}"; do
      wait "$pid"
    done
  else
    for d in packages/$package/*/*/; do
      pushd $d
      eval "${@}"
      popd
    done
  fi
fi
